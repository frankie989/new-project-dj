<%
const cfg = { ...require("./data.json"), ...arguments?.[0] }
const {
	extraClasses,
	extraAttrs
} = cfg
%>

<%
const classes = `dropdown ${extraClasses.join(" ")}`.trim()
const attrs = extraAttrs.join(" ")
%>

<div
	class="<%= classes %>"
	<%- attrs %>
>
	<div class="dropdown__current-version">
		ru
		<svg class="dropdown__icon" width="6.93" height="6" viewBox="0 0 8 6">
			<path d="M3.999777 6L0.535663 -1.28846e-07L7.46387 4.76837e-07L3.99977 6Z" fill="#003882"></path>
		</svg>
	</div>

	<div class="dropdown__menu">
		<a class="dropdown__link" href="/" rel="alternate" hreflang="ru">ru</a>
		<a class="dropdown__link" href="/en/" rel="alternate" hreflang="en">en</a>
	</div>

</div>
